<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <title>Dashboard</title>
</head>
<body>
  <div class="app-container">
    <div class="sidebar">
      <div class="sidebar-header">
        <div class="app-icon">
          Hello Admin
        </div>
      </div>
      <ul class="sidebar-list">
        
        <li class="sidebar-list-item active">
          <a href="#">
            <span>User Details</span>
          </a>
        </li>
      </ul>
      
    </div>
    <div class="app-content">
      <div class="app-content-header">
        <h1 class="app-content-headerText">Dashboard</h1>
      
        <button class="app-content-headerButton" style="position: absolute;right: 120px;background-color: #2869ff;"><a href="/admin/addUser" style="text-decoration: none;color: white;">Add User</a></button>
        
        <form action="/admin/logout" method="post">
        <button class="app-content-headerButton" style="background-color: red;">Sign out</button>
        </form>
      </div>
      <form class="app-content-actions" action="/admin/search" method="post">
        <input class="search-bar" placeholder="Search..." name="search" type="text">
      </form>
      <table class="products-area-wrapper tableView">
        <thead class="products-header">
          
            <tr style="display: flex;text-wrap: nowrap;">
              <th  class="product-cell image">Name</th>
              <th  class="product-cell category">Email</th>
              <th  class="product-cell status-cell">Created at</th>
              <th  class="product-cell sales">Updated at</th>
              <th  class="product-cell stock">Role</th>
              <th  class="product-cell stock"></th>
              <th  class="product-cell stock"></th>
              </tr>
        </thead>
        <tbody class="products-row">
          <% users.forEach(user => { %>
          <tr style="display: flex;">
            <td class="product-cell "><%= user.name%></td>
            <td class="product-cell "><%= user.email %></td>
            <td class="product-cell "><%= user.createdAt%></span></td>
            <td class="product-cell "><%= user.updatedAt%></td>
            <% if (user.isAdmin) { %>
              <td class="product-cell ">Admin</td>
            <% }else { %>
              <td class="product-cell ">User</td>
              <% } %>
          <td class="product-cell "><a href="/admin/editUser/<%=user._id%>"><i class="fa-regular fa-pen-to-square" style="color: #f7f7f8;"></i></a></i></td>

          <form action="/admin/deleteUser/<%=user._id%>?_method=delete" method="post">
             
            <td class="product-cell "><button style="background-color: transparent;border: none;cursor: pointer;" type="submit"><i class="fa-solid fa-trash" style="color: #ffffff;"></i></button></td>
          </form>
          
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="/js/dashboard.js"></script>

</body>
</html>