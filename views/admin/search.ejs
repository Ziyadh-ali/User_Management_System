<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/dashboard.css">
  <title>Dashboard</title>
</head>
<body>
  <div class="app-container">
    <div class="sidebar">
      <div class="sidebar-header">
        <div class="app-icon">
          hello
        </div>
      </div>
      <ul class="sidebar-list">
        
        <li class="sidebar-list-item active">
          <a href="#">
            <span>User Details</span>
          </a>
        </li>
      </ul>
      
    </div>
    <div class="app-content">
      <div class="app-content-header">
        <h1 class="app-content-headerText">Search</h1>
      
        <button class="app-content-headerButton" style="position: absolute;right: 120px;background-color: #2869ff;"><a href="/admin/dashboard" style="text-decoration: none;color: white;">Back</a></button>
    
      </div>
      <form class="app-content-actions" action="/admin/search" method="post">
        <input class="search-bar" placeholder="Search..." name="search" type="text">
      </form>
      <table class="products-area-wrapper tableView">
        <thead class="products-header">
          
            <tr style="display: flex;text-wrap: nowrap;">
              <th  class="product-cell image">Name</th>
              <th  class="product-cell category">Email</th>
              <th  class="product-cell status-cell">Created at</th>
              <th  class="product-cell sales">Updated at</th>
              <th  class="product-cell stock">Role</th>
              </tr>
        </thead>
        <tbody class="products-row">
            <% if (users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr style="display: flex;">
                    <td class="product-cell "><%= user.name %></td>
                    <td class="product-cell "><%= user.email %></td>
                    <td class="product-cell "><%= user.createdAt %></td>
                    <td class="product-cell "><%= user.updatedAt %></td>
                    <td class="product-cell "><%= user.isAdmin ? 'Admin' : 'User' %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td style="color: white;" colspan="5">No users found</td>
                </tr>
              <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <script src="/js/dashboard.js"></script>

</body>
</html>